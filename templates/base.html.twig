        {% block script %}
        {% endblock %}
        {% block styles %}
        {% endblock %}
        <style>
            .very-weak {
                background-color: #4a4a4a; /* Gris très foncé */
                color: white;
            }

            .weak {
                background-color: #e74c3c; /* Rouge vif */
                color: white;
            }

            .medium {
                background-color: #f39c12; /* Orange vif */
                color: white;
            }

            .good {
                background-color: #2ecc71; /* Vert clair */
                color: white;
            }

            .strong {
                background-color: #3498db; /* Bleu vif */
                color: white;
            }

            .very-strong {
                background-color: #9b59b6; /* Violet */
                color: white;
            }

            /* Styles pour la légende d'entropie */
            .entropy-legend {
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                margin-top: 20px;
            }

            /* Légende d'entropie sur desktop (fixée à droite) */
            @media (min-width: 768px) {
                .entropy-legend {
                    position: fixed;
                    right: 10px;
                    top: 50%;
                    transform: translateY(-50%);
                    width: 200px;
                }
            }

            /* Légende d'entropie en bas sur mobile */
            @media (max-width: 767px) {
                .entropy-legend {
                    width: 100%;
                    position: relative;
                    margin-top: 20px;
                }
            }

            .entropy-legend ul {
                list-style: none;
                padding: 0;
            }

            .entropy-legend li {
                display: flex;
                align-items: center;
                margin-bottom: 10px;
            }

            .entropy-legend span {
                display: inline-block;
                width: 20px;
                height: 20px;
                margin-right: 10px;
            }
        </style>

        
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
